# Contains my_name, my_email, and my_pass
source ~/.mutt/my_creds.muttrc

set realname      = "$my_name"
set from          = "$my_email"
set use_from      = yes
set envelope_from = yes

set sort = threads
set text_flowed = yes

set alias_file = ~/.mutt/aliases
source $alias_file

auto_view         text/html
alternative_order text/plain text/enriched text/html multipart/related
mime_lookup       application/octet-stream

set smtp_url      = "smtps://$my_email@smtp.gmail.com:465/"
set smtp_pass     = "$my_pass"
set ssl_force_tls = yes

folder-hook . 'set record="^"'

set mbox_type      = Maildir
set folder         = ~/mail/
set spoolfile      = ~/mail/
set imap_user      = "$my_email"
set imap_pass      = "$my_pass"
set imap_keepalive = 300
set imap_check_subscribed
unset imap_passive

color normal default default
