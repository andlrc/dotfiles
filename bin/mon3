#!/bin/sh
# Three monitor setup
# Usage:
#	mon3
#
# Author: Andreas Louv <andreas@louv.dk>
# Version: 0.1

xrandr --output eDP-1 --off
xrandr --output DP-2-3 --auto --rotate left
xrandr --output DP-2-1 --auto --right-of DP-2-3 --rotate right
xrandr --output DP-2-2 --auto --right-of DP-2-1 --rotate normal
